# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
    # Identifica a imaxe/box de vagrant que vas utilizar: "ubuntu/focal64"
    config.vm.box = "ubuntu/focal64"
  
    # Crea unha rede privada, que permite acceso host-only 치 m치quina
    config.vm.network "private_network", ip: "192.168.33.77"
 
    # Despregue de p치xinas web compartindo unha carpeta local
    config.vm.synced_folder "./WWW", "/var/www/html/"

     # Indica o nome da m치quina virtual
     config.vm.provider :virtualbox do |vb|
      vb.name = "host-www"
   end
  
    # Indica o nome do hostname
    config.vm.hostname = "host-www"
    config.vm.provision "shell", inline: <<-SHELL
    apt-get update
    
    # servidor web (apache)
    apt-get install -y apache2
  
 SHELL

  end